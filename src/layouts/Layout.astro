---
interface Props {
  title: string;
  showTitle?: boolean;
}

const { title, showTitle } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header>
      {showTitle && <h1>{title}</h1>}
    </header>

    <slot />
  </body>
</html>
<style is:global>
  :root {
    --primary-light: #dee4ff;
    --primary-dark: #13151a;
  }
  *,
  *::before,
  *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }
  html {
    background: var(--primary-dark);
  }

  body {
    border: 1.125rem solid var(--primary-light);
    display: grid;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
    min-height: 100vh;
    place-content: center;
  }

  h1 {
    color: var(--primary-light);
    margin-bottom: 1.125rem;
  }

  canvas {
    width: 512px;
    height: 512px;
    background: var(--primary-light);
  }
</style>
